# Claude Code MCP Server Configuration
# Copy this file to .env and fill in your API keys

# Workspace name (used for tmux session naming and IPC paths)
WORKSPACE_NAME=cc-bridge

# IPC mode: callback payload or hybrid (Stop hook + inline fallback)
# Options: callback_payload, hybrid, filesystem
IPC_MODE=callback_payload

# Hybrid mode tuning (optional)
# STRIP_STOP_HOOK=1
# START_AGENT_ON_INIT=1
# CALLBACK_LOCK_TTL_SEC=60
# HYBRID_FALLBACK_DELAY_SEC=1.5
# HYBRID_FALLBACK_RETRY_SEC=1

# LLM Providers
ANTHROPIC_BASE_URL=
ANTHROPIC_API_KEY=
ANTHROPIC_AUTH_TOKEN=

# Health Endpoint Authentication (optional but recommended for production)
# If set, the /health endpoint will require this key via X-API-Key header or api_key query parameter
HEALTH_API_KEY=your_secure_random_key_here

# Ref MCP Server (https://github.com/modelcontextprotocol/servers/tree/main/src/ref)
REF_API_KEY=your_ref_api_key_here

# Brave Search API Key (https://api.search.brave.com/app/keys)
BRAVE_API_KEY=your_brave_api_key_here

# HuggingFace API Token (https://huggingface.co/settings/tokens)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Jupyter MCP Server Configuration
JUPYTER_URL=http://localhost:4040
JUPYTER_TOKEN=your_jupyter_token_here

# Weights & Biases API Key (https://wandb.me/settings)
WANDB_API_KEY=your_wandb_api_key_here

# -----------------------------------------------------------------------------
# Telegram Bot Configuration
# -----------------------------------------------------------------------------
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# -----------------------------------------------------------------------------
# Feishu/Lark Bot Configuration
# -----------------------------------------------------------------------------
# Feishu App ID from Feishu Open Platform (https://open.feishu.cn/app)
# or Lark Developer Console (https://open.larksuite.com/app)
# Example: cli_xxxxxxxxxxxxx
FEISHU_APP_ID=your_feishu_app_id_here

# Feishu App Secret from Feishu Open Platform or Lark Developer Console
FEISHU_APP_SECRET=your_feishu_app_secret_here

# Feishu Domain: feishu (China) or lark (International)
# Default: feishu
FEISHU_DOMAIN=feishu

# Optional: Feishu Encrypt Key for webhook encryption verification
# Configure this in Feishu/Lark Open Platform under Event Subscriptions > Encryption Strategy
FEISHU_ENCRYPT_KEY=your_encrypt_key_here

# Optional: Feishu Verification Token for webhook verification
# Configure this in Feishu/Lark Open Platform under Event Subscriptions
FEISHU_VERIFICATION_TOKEN=your_verification_token_here
