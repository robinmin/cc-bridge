# Claude Code MCP Server Configuration
# Copy this file to .env and fill in your API keys

# Health Endpoint Authentication (optional but recommended for production)
# If set, the /health endpoint will require this key via X-API-Key header or api_key query parameter
HEALTH_API_KEY=your_secure_random_key_here

# Ref MCP Server (https://github.com/modelcontextprotocol/servers/tree/main/src/ref)
REF_API_KEY=your_ref_api_key_here

# Brave Search API Key (https://api.search.brave.com/app/keys)
BRAVE_API_KEY=your_brave_api_key_here

# HuggingFace API Token (https://huggingface.co/settings/tokens)
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Jupyter MCP Server Configuration
JUPYTER_URL=http://localhost:4040
JUPYTER_TOKEN=your_jupyter_token_here

# Weights & Biases API Key (https://wandb.me/settings)
WANDB_API_KEY=your_wandb_api_key_here
